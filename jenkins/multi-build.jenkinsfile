// Jenkinsfile (Scripted Pipeline)
node { // node/agent
    stage('Deploy') {
        bomVersion = "20.11.0";
        bomCsvFile = new File("./bom/${bomVersion}.csv"
    	jobParameters = bom.toApplicationJobParameterList(bomCsvFile)

    	jobParameters.each {
        	println("Building ${it.APPLICATION}-${it.VERSION}")
        	println("======================================================================")
        	build(job: it.APPLICATION, parameters: [string(name: 'GIT_REF', value: it.GIT_REF), string(name: 'VERSION', value: it.VERSION)])
    	}
    }
}